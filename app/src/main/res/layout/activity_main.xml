<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_centering"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:tag="activity_basic_centering"
            android:text="centering views"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:tag="activity_basic_arrange"
            android:text="basic arrange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_centering" />

        <Button
            android:id="@+id/btn_guideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:tag="activity_guidelines"
            android:text="guidelines"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_basic" />

        <Button
            android:id="@+id/btn_advanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:tag="activity_advanced_arrange"
            android:text="advanced arrangement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_guideline" />

        <Button
            android:id="@+id/btn_aspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:tag="activity_aspect_ratio"
            android:text="aspect ratio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_advanced" />

        <Button
            android:id="@+id/btn_chain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:tag="activity_basic_chains"
            android:text="basic chains"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_aspect" />

        <Button
            android:id="@+id/btn_constraintset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showConstraintSetExample"
            android:tag="activity_constraint_set"
            android:text="constraintset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_chain" />

        <Button
            android:id="@+id/btn_advanced_chain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="show"
            android:tag="activity_advanced_chains"
            android:text="advanced chains"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_constraintset" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>