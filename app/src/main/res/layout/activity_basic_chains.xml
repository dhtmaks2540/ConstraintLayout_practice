<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Basic Chains"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- packed 스타일: 체인의 각 요소들을 한 곳에 묶습니다 -->
    <!-- 기본 옵션은 spread chains -->
    <!-- vertical bias: 수직 비율 조정 -->
    <Button
        android:id="@+id/btn30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@id/btn31"
        app:layout_constraintStart_toStartOf="@id/btn31"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@id/btn32"
        app:layout_constraintStart_toStartOf="@id/btn32"
        app:layout_constraintTop_toBottomOf="@id/btn30" />

    <Button
        android:id="@+id/btn32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@id/btn33"
        app:layout_constraintStart_toStartOf="@id/btn33"
        app:layout_constraintTop_toBottomOf="@id/btn31" />

    <Button
        android:id="@+id/btn33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        app:layout_constraintBottom_toTopOf="@id/btn34"
        app:layout_constraintStart_toStartOf="@id/btn34"
        app:layout_constraintTop_toBottomOf="@id/btn32" />

    <Button
        android:id="@+id/btn34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn33" />

    <Button
        android:id="@+id/btn35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        app:layout_constraintEnd_toStartOf="@id/btn36"
        app:layout_constraintStart_toEndOf="@id/btn34"
        app:layout_constraintTop_toTopOf="@id/btn34" />

    <Button
        android:id="@+id/btn36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn35"
        app:layout_constraintTop_toTopOf="@id/btn34" />


</androidx.constraintlayout.widget.ConstraintLayout>